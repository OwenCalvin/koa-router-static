{
  "verbose": true,
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testMatch": ["**/tests/*.ts"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "rootDir": "./",
  "roots": ["<rootDir>/tests"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/**/*.d.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "testEnvironment": "node"
}
